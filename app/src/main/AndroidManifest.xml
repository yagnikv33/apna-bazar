<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.esjayit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.esjayit.apnabazar.App"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:label"
        tools:targetApi="n">
        <activity
            android:name="com.esjayit.apnabazar.main.dashboard.view.stock_view.ViewReturnAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.dashboard.view.stock_view.ReturnListAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.dashboard.view.demand.ViewDemandAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.dashboard.view.demand.AddDemandAct"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.dashboard.view.DashboardAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.entrymodule.view.PwdAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.entrymodule.view.NewPwdAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.entrymodule.view.GetYourCodeAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.entrymodule.view.SignInAct"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.esjayit.apnabazar.main.entrymodule.view.SplashScreenAct"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>