<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="bottomSheetDialogTheme">@style/BsdTheme</item>
    </style>

    <style name="BsdTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogStyle" parent="Theme.Transparent">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--        <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <style name="TextViewStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <!--<item name="android:fontFamily">@font/any</item>-->
        <!--<item name="android:maxLines">1</item>-->
    </style>

    <style name="EditTextStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <!--<item name="android:singleLine">true</item>-->
        <!--<item name="android:maxLines">1</item>-->
        <!--<item name="android:backgroundTint">@color/any</item>-->
    </style>

    <style name="ConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="CheckButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:buttonTint">@color/selector_checked_button</item>
        <!--<item name="android:fontFamily">@font/any</item>-->
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--card view-->
    <style name="CardViewRoundedCorner" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_16sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_16sdp</item>
    </style>

    <!-- new style -->
    <style name="bg_view">
        <item name="android:background">@color/white</item>
    </style>

    <style name="entry_module_header_text">
        <item name="fontFamily">@font/robotor_regular</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="entry_module_desc_text">
        <item name="fontFamily">@font/ralewa_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_style">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/robotor_regular</item>
        <item name="android:textColor">#919191</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="btn_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ralewa_regular</item>
    </style>

    <style name="sub_header">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="sub_desc">
        <item name="android:textColor">@color/sub_desc</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="medium_15_disable">
        <item name="android:textColor">@color/txt_profile</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="fontFamily">@font/ralewa_regular</item>
    </style>

    <style name="medium_15">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="fontFamily">@font/ralewa_regular</item>
    </style>

    <style name="edt_label">
        <item name="android:textColor">@color/sub_desc</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="card_corner">
        <item name="android:topLeftRadius">@dimen/_16sdp</item>
        <item name="android:topRightRadius">@dimen/_16sdp</item>
    </style>

    <style name="home_lbl">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    
    <style name="txt_demand_lbl">
        <item name="android:textColor">@color/txt_profile</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="ans_demand">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/ralewa_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/background</item>
    </style>
    
    <style name="add_demand_row">
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="add_demand_sub_header_row">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="add_demand_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    
    <style name="view_demand">
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/calibri_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="demand_list_status">
        <item name="fontFamily">@font/robotor_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>
    <style name="demand_list_label_status">
        <item name="android:textColor">@color/sub_desc</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/robotor_regular</item>
    </style>
</resources>
