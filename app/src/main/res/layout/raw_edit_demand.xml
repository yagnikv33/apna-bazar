<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="data"
            type="com.esjayit.apnabazar.data.model.response.DemandItemslistItem" />

        <!--   <variable
               name="showProgress"
               type="androidx.databinding.ObservableField&lt;Boolean&gt;" />-->

        <variable
            name="vm"
            type="com.esjayit.apnabazar.main.dashboard.view.demand.AddDemandAct" />
    </data>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{click::onClick}"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subject_name"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{data.subname}"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/edt_qty"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:editable="true"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:onClick="@{click::onClick}"
                android:text="@{data.qty}"
                android:layout_marginStart="@dimen/_30dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_branch"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="@{data.bunchqty}"
                tools:text="20"
                android:layout_marginStart="@dimen/_30dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tv_standard"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="wrap_content"
                android:text="@{data.std}"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sub_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_6sdp"
            android:background="@color/white"
            android:onClick="@{click::onClick}"
            android:orientation="horizontal"
            android:visibility="@{data.textVisible ? View.VISIBLE : View.GONE}">

            <TextView
                android:id="@+id/tv_subject_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{`Standard   : `  + data.std}"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tv_rate"
                style="@style/add_demand_sub_header_row"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@{`Rate  : `  + data.rate}"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_branch_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{`Medium   : ` + data.medium}"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </LinearLayout>
</layout>