<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/inc_bg_common_layout"
            layout="@layout/inc_entry_module"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:descIsVisible="@{true}"
            bind:descText="@{@string/txt_otp_subtitle}"
            bind:headerText="@{@string/txt_get_your_code}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_36sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.57">

            <!-- Main OTP -->
            <EditText
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:background="@color/transparent"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cv6"
                app:layout_constraintStart_toStartOf="@id/cv1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.27999997" />

            <!-- OTP 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv1"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/cv2"
                app:layout_constraintStart_toStartOf="@id/edt_otp"
                app:layout_constraintTop_toTopOf="@id/edt_otp">

                <EditText
                    android:id="@+id/edt_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- OTP 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv2"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/cv1"
                app:layout_constraintTop_toTopOf="@id/edt_otp">

                <EditText
                    android:id="@+id/edt_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- OTP 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv3"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/cv4"
                app:layout_constraintStart_toEndOf="@id/cv2"
                app:layout_constraintTop_toTopOf="@id/edt_otp">


                <EditText
                    android:id="@+id/edt_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- OTP 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv4"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/cv3"
                app:layout_constraintStart_toEndOf="@id/cv5"
                app:layout_constraintTop_toTopOf="@id/edt_otp">

                <EditText
                    android:id="@+id/edt_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- OTP 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv5"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/cv6"
                app:layout_constraintStart_toEndOf="@id/cv4"
                app:layout_constraintTop_toTopOf="@id/edt_otp">

                <EditText
                    android:id="@+id/edt_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- OTP 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv6"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_otp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/edt_otp"
                app:layout_constraintStart_toEndOf="@id/cv5"
                app:layout_constraintTop_toTopOf="@id/edt_otp">

                <EditText
                    android:id="@+id/edt_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/x"
                    android:maxLength="1"
                    android:textSize="@dimen/_15ssp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_not_receive_otp"
                style="@style/btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_dont_get_otp"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="@+id/edt_otp"
                app:layout_constraintTop_toBottomOf="@id/edt_otp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:onClick="@{click::onClick}"
                android:textColor="@color/light_blue"
                app:layout_constraintBottom_toBottomOf="@id/tv_not_receive_otp"
                app:layout_constraintStart_toEndOf="@id/tv_not_receive_otp"
                app:layout_constraintTop_toTopOf="@id/tv_not_receive_otp"
                tools:text="Resend" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify_and_proceed"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_36sdp"
                android:backgroundTint="@color/black"
                android:onClick="@{click::onClick}"
                android:text="@string/btn_verify_and_proceed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_not_receive_otp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
