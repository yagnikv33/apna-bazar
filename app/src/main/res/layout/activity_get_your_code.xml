<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<!--        <import type="android.view.View" />-->

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

<!--        <variable-->
<!--            name="otpModel"-->
<!--            type="com.esjayit.apnabazar.data.model.response.SendOTPResponse" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/inc_bg_common_layout"
            layout="@layout/inc_entry_module"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:descIsVisible="@{true}"
            bind:descText="@{@string/txt_otp_subtitle}"
            bind:headerText="@{@string/txt_get_your_code}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_36sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.57">

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otpView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:bar_active_color="@color/red"
                app:bar_enabled="true"
                app:bar_height="2dp"
                app:height="@dimen/_38sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.27999997"
                app:length="6"
                app:otp_text_size="@dimen/_16ssp"
                app:width="@dimen/_32sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_not_receive_otp"
                style="@style/btn_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_dont_get_otp"
                android:textColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="@+id/otpView"
                app:layout_constraintTop_toBottomOf="@id/otpView" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:onClick="@{click::onClick}"
                android:textColor="@color/light_blue"
                app:layout_constraintBottom_toBottomOf="@id/tv_not_receive_otp"
                app:layout_constraintStart_toEndOf="@id/tv_not_receive_otp"
                app:layout_constraintTop_toTopOf="@id/tv_not_receive_otp"
                tools:text="Resend" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify_and_proceed"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_36sdp"
                android:backgroundTint="@color/black"
                android:onClick="@{click::onClick}"
                android:text="@string/btn_verify_and_proceed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_not_receive_otp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
