<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="data"
            type="com.esjayit.apnabazar.data.model.response.ReturnitemsItem" />

        <variable
            name="innterData"
            type="com.esjayit.apnabazar.data.model.response.ReturnitemsSingle" />

        <variable
            name="vm"
            type="com.esjayit.apnabazar.main.dashboard.view.demand.AddDemandAct" />
    </data>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:onClick="@{click::onClick}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subject_name"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{data.subname}"
                android:textAlignment="textStart"
                tools:text="Math Magic (20)" />

            <TextView
                android:id="@+id/tv_branch"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_14sdp"
                android:text="@{data.buyqty}"
                android:textAlignment="textStart"
                tools:text="410" />

            <TextView
                android:id="@+id/tv_standard"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_50sdp"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_height="wrap_content"
                android:text="@{data.maxretu}"
                android:textAlignment="textStart"
                tools:text="20" />

            <EditText
                android:id="@+id/edt_qty"
                style="@style/add_demand_row"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:layout_weight="6"
                android:maxLength="3"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:onClick="@{click::onClick}"
                android:text="@{data.retuqty}"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sub_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:onClick="@{click::onClick}"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_6sdp"
            android:visibility="@{data.textVisible ? View.VISIBLE : View.GONE}">

            <TextView
                android:id="@+id/tv_subject_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@{`Standard : `  + data.returnItemResponse.standard}"
                android:textAlignment="textStart"
                tools:text="Standard : 1" />

            <TextView
                android:id="@+id/tv_rate"
                style="@style/add_demand_sub_header_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@{`Rate : `  + data.returnItemResponse.rate}"
                android:textAlignment="center"
                tools:text="rate : 65.00" />

            <TextView
                android:id="@+id/tv_bunch"
                style="@style/add_demand_sub_header_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@{`Bunch : `  + data.returnItemResponse.buyqty}"
                android:textAlignment="textEnd"
                tools:text="Bunch : 410" />

            <TextView
                android:id="@+id/tv_standard_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:text="@{`Medium : ` + data.returnItemResponse.medium}"
                android:textAlignment="textEnd"
                tools:text="Medium : ENG" />

        </LinearLayout>

    </LinearLayout>
</layout>