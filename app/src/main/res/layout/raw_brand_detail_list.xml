<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.graphics.Color" />

        <import type="android.view.View" />

        <variable
            name="items"
            type="com.yudiz.e_cigarette.data.model.response.JuiceAndHardware" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_175sdp"
        android:layout_marginEnd="@dimen/_12sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            style="@style/CardViewRoundedCorner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardElevation="10dp"
            card_view:cardPreventCornerOverlap="false">

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_brand_logo"
            path="@{items.image}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:translationZ="20dp"
            app:layout_constraintBottom_toTopOf="@id/tv_brand_name"
            app:layout_constraintEnd_toEndOf="@+id/card_view"
            app:layout_constraintHeight_percent="0.62"
            app:layout_constraintStart_toStartOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/layer" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_bg_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/top_corner_rounded"
            android:backgroundTint="@{Color.parseColor(items.background_color)}"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_18sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:src="@drawable/circle"
            android:translationZ="10dp"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="@+id/card_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center"
            android:text="@{items.label}"
            android:textAllCaps="true"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_12sdp"
            android:translationZ="10dp"
            app:layout_constraintEnd_toEndOf="@+id/card_view"
            app:layout_constraintStart_toStartOf="@+id/card_view"
            app:layout_constraintTop_toBottomOf="@id/iv_brand_logo"
            app:layout_constraintVertical_bias="0.0"
            tools:text="logic" />

        <TextView
            android:id="@+id/tv_brand_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:text="@{items.label_name}"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
