<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Row 1 -->
        <LinearLayout
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_6sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/sub_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:paddingHorizontal="@dimen/_8sdp"
                android:text="@string/txt_add_demand"
                android:textAlignment="center" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/_16sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_notification" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_select_medium"
            style="@style/txt_demand_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/txt_select_meduim"
            app:layout_constraintStart_toStartOf="@id/txt_fld_slct_medim_lyt"
            app:layout_constraintTop_toBottomOf="@id/top_app_bar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_fld_slct_medim_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:onClick="@{click::onClick}"
            app:boxBackgroundColor="@color/white"
            app:endIconDrawable="@drawable/ic_down"
            app:endIconMode="custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_medium">

            <EditText
                android:id="@+id/et_module"
                style="@style/ans_demand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="false"
                android:textColor="@color/txt_profile" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Row 2 -->

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_2"
            app:layout_constraintStart_toStartOf="@id/txt_fld_slct_medim_lyt"
            app:layout_constraintTop_toBottomOf="@id/txt_fld_slct_medim_lyt">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_select_standard"
                style="@style/txt_demand_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_select_meduim"
                app:layout_constraintStart_toStartOf="@id/txt_fld_slct_medim_lyt"
                app:layout_constraintTop_toBottomOf="@id/txt_fld_slct_medim_lyt" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_fld_slct_standard_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:endIconDrawable="@drawable/ic_down"
                app:endIconMode="custom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_select_standard">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/et_standard"
                    style="@style/ans_demand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:text="text"
                    android:textAllCaps="true"
                    android:textColor="@color/txt_profile" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/txt_fld_slct_medim_lyt"
            app:layout_constraintStart_toEndOf="@id/ll_1"
            app:layout_constraintTop_toBottomOf="@id/txt_fld_slct_medim_lyt">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_date"
                style="@style/txt_demand_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_date"
                app:layout_constraintStart_toStartOf="@+id/txt_fld_slct_date_lyt"
                app:layout_constraintTop_toTopOf="@+id/tv_select_standard" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_fld_slct_date_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/txt_fld_slct_medim_lyt"
                app:layout_constraintTop_toBottomOf="@+id/tv_date">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/et_date"
                    style="@style/ans_demand"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:hint=""
                    android:text="2022-03-26  11:33  A.M"
                    android:textAllCaps="true"
                    android:textColor="@color/txt_profile" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintEnd_toEndOf="@id/ll_2"
            app:layout_constraintStart_toStartOf="@id/ll_1"
            app:layout_constraintTop_toBottomOf="@id/ll_1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:src="@drawable/ic_search" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:background="@color/transparent"
                android:fontFamily="@font/roboto_medium_numbers"
                android:hint="@string/txt_search"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
