<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_68sdp"
            android:background="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/sub_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:text="@string/txt_profile"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:onClick="@{click::onClick}"
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_logout"
                    android:translationZ="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <ScrollView
            android:id="@+id/scrollView"
            app:layout_constraintBottom_toTopOf="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="Party Username"
                    style="@style/sub_header"
                    android:textColor="@color/txt_profile"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/medium_15_disable"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="Party Name"
                    style="@style/sub_header"
                    android:textColor="@color/txt_profile"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    style="@style/medium_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:textColor="@color/txt_profile"
                    style="@style/sub_header"
                    android:text="Party Address"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textMultiLine"
                    android:id="@+id/partyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:gravity="top|start"
                    style="@style/medium_15"
                    android:imeOptions="actionNext"
                    android:minLines="2"
                    android:maxLines="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_weight="2"
                        style="@style/sub_header"
                        android:textColor="@color/txt_profile"
                        android:text="Phone 1"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_weight="2"
                        style="@style/sub_header"
                        android:textColor="@color/txt_profile"
                        android:text="Phone 2"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyPhone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/medium_15_disable"
                        android:enabled="false"
                        android:inputType="phone"
                        android:layout_gravity="start"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyPhone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/medium_15"
                        android:inputType="phone"
                        android:imeOptions="actionNext"
                        android:maxLength="10"
                        android:layout_gravity="end" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="Email ID"
                    android:textColor="@color/txt_profile"
                    style="@style/sub_desc"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    style="@style/medium_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_weight="2"
                        android:text="City"
                        android:textColor="@color/txt_profile"
                        style="@style/sub_desc"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:textColor="@color/txt_profile"
                        android:layout_weight="2"
                        android:text="State"
                        style="@style/sub_desc"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="start"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        style="@style/medium_15"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/medium_15"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="Country"
                    android:textColor="@color/txt_profile"
                    style="@style/sub_desc"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    style="@style/medium_15"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="GST No"
                    android:textColor="@color/txt_profile"
                    style="@style/sub_desc"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyGST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    style="@style/medium_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="Pancard No"
                    android:textColor="@color/txt_profile"
                    style="@style/sub_desc"
                    android:textSize="@dimen/_12ssp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partyPanNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="10"
                    style="@style/medium_15"
                    android:imeOptions="actionDone"/>
            </LinearLayout>


        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            style="@style/btn_style"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_32sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{click::onClick}"
            android:backgroundTint="@color/black"
            android:text="@string/txt_edit_profile"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
