<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />


        <variable
            name="notiListData"
            type="com.esjayit.apnabazar.data.model.response.NotificationlistItem" />
    </data>

    <LinearLayout
        android:onClick="@{click::onClick}"
        android:id="@+id/ll_main_noti_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/noti_list_main_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A172238"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/_noti_list_no"
                        style="@style/title_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="TITLE"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{notiListData.title}" />

                    <TextView
                        android:id="@+id/deman_list_body"
                        style="@style/demand_list_label_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        tools:text="BODY"
                        android:text="@{notiListData.body}" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginRight="@dimen/_10dp"
                    android:id="@+id/noti_download_view"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@color/transparent"
                    android:padding="@dimen/_6sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/download_btn"
                        tools:visibility="visible"
                        android:onClick="@{click::onClick}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="visible"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_2sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:text="Download"
                            android:fontFamily="@font/calibri_bold"
                            android:shadowColor="@color/transparent"
                            android:textColor="@color/btn_green"
                            android:text="Download" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
