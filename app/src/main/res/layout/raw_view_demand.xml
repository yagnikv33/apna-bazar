<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="data"
            type="com.esjayit.apnabazar.data.model.response.ViewDemandItemslistItem" />

    </data>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{click::onClick}"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_16sdp">

            <TextView
                android:id="@+id/tv_subject_name"
                style="@style/add_demand_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{data.subname}"
                android:textAlignment="textStart"
                tools:text="MERYGOLD ENGLISHMEDIUM MERYGOLD ENGLISHMEDIUMMERYGOLD ENGLISHMEDIUM" />

            <TextView
                android:id="@+id/tv_branch"
                style="@style/add_demand_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="@{data.qty}"
                tools:text="20" />

            <TextView
                android:id="@+id/tv_standard"
                style="@style/add_demand_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@{data.bunchqty}"
                android:textAlignment="textEnd"
                tools:text="20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sub_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:onClick="@{click::onClick}"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_subject_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:text="@{`Standard : `+ data.std}"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tv_rate"
                style="@style/add_demand_sub_header_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{`Rate : ` + data.rate}"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_standard_sub_header"
                style="@style/add_demand_sub_header_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:text="@{`Medium : `+ data.medium}"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </LinearLayout>

</layout>
