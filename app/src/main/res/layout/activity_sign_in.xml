<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".apnabazar.main.entrymodule.view.SignInAct">

        <include
            android:id="@+id/inc_bg_common_layout"
            layout="@layout/inc_entry_module"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:descIsVisible="@{false}"
            bind:descText="@{@string/txt_otp_subtitle}"
            bind:headerText="@{@string/header_sign_in}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_36sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_username"
                style="@style/label_style"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:text="@string/txt_user_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_username"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tv_username"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_username"
                app:startIconDrawable="@drawable/ic_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:hint="@string/hint_esjayit"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:fontFamily="@font/ralewa_regular"
                    android:textColor="@color/edit_text"
                    android:textSize="@dimen/_12ssp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/btn_style"
                android:onClick="@{click::onClick}"
                app:layout_constraintTop_toBottomOf="@id/edt_username"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="@id/edt_username"
                app:layout_constraintStart_toStartOf="@id/edt_username"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:backgroundTint="@color/black"
                android:text="@string/txt_next" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
